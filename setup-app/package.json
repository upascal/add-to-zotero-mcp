{
  "name": "zotero-assistant-setup",
  "version": "0.1.0",
  "description": "Setup wizard for Zotero Assistant MCP Server",
  "author": "upascal",
  "repository": "github:upascal/zotero-assistant-mcp",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.zotero-assistant.setup",
    "productName": "Zotero Assistant Setup",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "../server",
        "to": "server",
        "filter": [
          "**/*",
          "!node_modules/**/test",
          "!node_modules/**/tests",
          "!node_modules/**/*.md",
          "!node_modules/**/.github"
        ]
      }
    ],
    "mac": {
      "target": "dmg",
      "identity": null,
      "icon": "../assets/icon/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "../assets/icon/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "../assets/icon"
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  }
}